{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/build",
    "declarationDir": "./dist/types",
    "composite": false,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": false
  },
  "rootDir": "./src",
  "include": ["./src", "./bin/", "./declarations.d.ts"]
}
